<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iut.info63.vraifauxandroid.activity.ResultatActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultat_final"
        android:id="@+id/tv_resultatFinal"
        android:layout_above="@+id/tv_cmptGoodAnswer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:textColor="#f2f2f2"
        android:textSize="10pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_cmptGoodAnswer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0ba600"
        android:textSize="20pt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommencer"
        android:id="@+id/b_restart"
        android:layout_above="@+id/b_returnStartMenu"
        android:layout_centerHorizontal="true"
        android:textColor="#f2f2f2"
        android:background="#0ba600"  />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retourner au menu"
        android:id="@+id/b_returnStartMenu"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
